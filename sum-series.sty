% Sums and series %
\newcommand{\isum}[2]{\sum_{i=#1}^{#2}}
\newcommand{\jsum}[2]{\sum_{j=#1}^{#2}}
\newcommand{\ksum}[2]{\sum_{k=#1}^{#2}}
\newcommand{\nsum}[2]{\sum_{n=#1}^{#2}}

\newcommand{\Sum}{\sum\limits}
\newcommand{\iSum}[2]{\sum\limits_{i=#1}^{#2}}
\newcommand{\jSum}[2]{\sum\limits_{j=#1}^{#2}}
\newcommand{\kSum}[2]{\sum\limits_{k=#1}^{#2}}
\newcommand{\nSum}[2]{\sum\limits_{n=#1}^{#2}}

\newcommand{\dsum}{\displaystyle\sum}
\newcommand{\idsum}[2]{\displaystyle\sum_{i=#1}^{#2}}
\newcommand{\jdsum}[2]{\displaystyle\sum_{j=#1}^{#2}}
\newcommand{\kdsum}[2]{\displaystyle\sum_{k=#1}^{#2}}
\newcommand{\ndsum}[2]{\displaystyle\sum_{n=#1}^{#2}}

\newcommand{\series}[1]{\sum_{#1}^\infty}
\newcommand{\iseries}[1]{\sum_{i=#1}^\infty}
\newcommand{\jseries}[1]{\sum_{j=#1}^\infty}
\newcommand{\kseries}[1]{\sum_{k=#1}^\infty}
\newcommand{\nseries}[1]{\sum_{n=#1}^\infty}

\newcommand{\Series}[1]{\sum\limits_{#1}^\infty}
\newcommand{\iSeries}[1]{\sum\limits_{i=#1}^\infty}
\newcommand{\jSeries}[1]{\sum\limits_{j=#1}^\infty}
\newcommand{\kSeries}[1]{\sum\limits_{k=#1}^\infty}
\newcommand{\nSeries}[1]{\sum\limits_{n=#1}^\infty}

\newcommand{\dseries}[1]{\displaystyle\sum_{#1}^\infty}
\newcommand{\idseries}[1]{\displaystyle\sum_{i=#1}^\infty}
\newcommand{\jdseries}[1]{\displaystyle\sum_{j=#1}^\infty}
\newcommand{\kdseries}[1]{\displaystyle\sum_{k=#1}^\infty}
\newcommand{\ndseries}[1]{\displaystyle\sum_{n=#1}^\infty}